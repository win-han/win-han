doctype html
html(lang="en")
	head
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width,initial-scale=1")
		title Catico
		include favicon.html
		link(rel="stylesheet", type="text/css", href="style.css")
	body
		include vectors.svg
		main.main
			.logo
				.logo_wrapper
					include logo.svg
			include menu.pug
			section.section.intro#intro
				.intro_text
					h1.intro_title Catico
					.intro_subtitle creative web development
				a(href="#projects").intro_link
					.intro_arrows
						.intro_arrow
							svg
								use(xlink:href="#arrow")
						.intro_arrow
							svg
								use(xlink:href="#arrow")
			section.section.proj#projects
				#proj1.proj_el
					.proj_wrap
						img.proj_img(src="img/yoga.png")
						.proj_overlay
							.proj_title Ashtanga Yoga
							p.proj_descr
								| Mobile app guide to ashtanga yoga series and asanas.
							.proj_tags #ReactNative #Expo
							.proj_links
								a.proj_link.github(href='https://github.com/cat-ico/yoga', target='_blank')
									svg
										use(xlink:href='#github')
								a.proj_link.play_badge(href='https://play.google.com/store/apps/details?id=com.caticoapps.ashtangayoga', target='_blank')
									include google-play-badge.svg
				#proj2.proj_el
					.proj_wrap
						img.proj_img(src="img/hey.png")
						.proj_overlay
							.proj_title Hey
							p.proj_descr
