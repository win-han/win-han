				#proj4.proj_el
					.proj_wrap
						img.proj_img(src="img/votex.png")
						.proj_overlay
							.proj_title Votex
							p.proj_descr
								| NodeJS app for poll creation.
							.proj_tags #NodeJS #Pug #CSS #ChartJS #Heroku #MongoDB 
							.proj_links
								a.proj_link.github(href='https://github.com/cat-ico/votingapp', target='_blank')
									svg
										use(xlink:href='#github')
								a.proj_link(href='https://votexapp.herokuapp.com/', target='_blank')
									svg
										use(xlink:href='#link')
											
